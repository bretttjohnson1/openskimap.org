{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "importHelpers": true,
    "lib": [
      "dom",
      "es6",
      "es2015.promise",
      "es2015.collection",
      "es2016.array.include"
    ],
    "typeRoots": ["./node_modules/@types", "./definitions"]
  },
  "include": ["./src/**/*"]
}
